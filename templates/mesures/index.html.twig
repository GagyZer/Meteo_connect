{% extends 'base.html.twig' %}

{% block title %}Hello MesuresController!{% endblock %}

{% block body %}

    {% for mesure in mesures %}
        <div class="d-flex justify-content-center" style="width: 80% ; margin: auto;margin-top: 150px; padding:10px; ">
            <div class="text-center mx-5 bg-primary px-5 py-3">Temperatures : {{ mesure.temperatureC }}</div>
            <div class="text-center mx-5 bg-primary px-5 py-3">Humidite : {{ mesure.humidite }}</div>
            <div class="text-center mx-5 bg-primary px-5 py-3">Pression : {{ mesure.pression }}</div>
            <div class="text-center mx-5 bg-primary px-5 py-3">Date et Heure : {{ mesure.dateHeure|date('Y-m-d H:i:s') }}</div>
        </div>
    {% endfor %}
{% endblock %}
